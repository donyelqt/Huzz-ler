<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode Theme -->
    <style name="Theme.Huzzler" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- System Colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Material3 Colors -->
        <item name="colorPrimary">@color/huzzler_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gray_medium</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Custom App Colors (Dark Mode) -->
        <item name="appBackgroundColor">@color/black</item>
        <item name="appSurfaceColor">#1E1E1E</item>
        <item name="appTextColor">@color/white</item>
        <item name="appTextSecondaryColor">@color/gray_light</item>
        <item name="appCardBackgroundColor">#2A2A2A</item>
    </style>
</resources>